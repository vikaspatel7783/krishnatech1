<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krishnatech.mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_devicelist" />
        <activity
            android:name=".ui.DashboardActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_dashboard" />
        <activity
            android:name=".ui.AlertsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_alerts" />
    </application>

</manifest>